/* pages/time07/time07.wxss */
.box {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

.top {
  background-color: red;
  text-align: center;
}

.title {
  color: white;
  font-weight: 800;
  font-size: larger;
}

.box-img {
  width: 100vw;
}

.item-img {
  width: 100%;
  height: 100%;
}

.info-box {
  border: 2px solid #3c3c3c;
}

.user-box {
  border: 1px solid red;
  height: 250rpx;
  display: flex;
  flex-direction: row;
}

.left-box {
  width: 35%;
  height: 100%;
}

.right-box {
  width: 65%;
  height: 100%;
  padding: 10px 20px;
}

.info {
  margin: 2px;
  text-align: start;
  font-size: 12px;
  text-overflow: ellipsis;
}