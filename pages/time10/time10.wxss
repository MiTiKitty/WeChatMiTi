.face {
  margin: 20px auto;
  width: 300rpx;
  height: 290rpx;
  border-radius: 30% 30% 75% 75%;
  border: 1px soild #333;
  background-color: rgb(243, 220, 120);
}

.top {
  position: relative;
  height: 100rpx;
  display: flex;
  flex-direction: row;
}

.eye {
  position: absolute;
  width: 75rpx;
  height: 30rpx;
  border: 1px solid #000;
  top: 50%;
  margin-top: 5%;
}

.left {
  border-radius: 75% 95% 65% 95%;
  left: 25px;
}

.right {
  border-radius: 95% 75% 95% 65%;
  right: 25px;
}

.c {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background-color: #000;
  margin: auto;
}

.mouse {
  margin: auto;
  margin-top: 20%;
  width: 130rpx;
  height: 60rpx;
  border: 3px solid #3d3d3d;
  border-radius: 30% 30% 65% 65%;
  border-top: 0;
  border-left: 0;
  border-right: 0;
}